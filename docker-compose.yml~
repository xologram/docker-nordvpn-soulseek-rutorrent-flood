version: '2'
services:
    nordvpn:
      image: bubuntux/nordvpn
      container_name: nordvpn
      cap_add:
        - NET_ADMIN
      volumes:
        - "/etc/localtime:/etc/localtime:ro"
      environment:
        - "USER=NORDVPN_USERNAME"
        - "PASS=NORDVPN_PASSWORD"
        - "country=USA"
        - "CATEGORY=P2P"
        - "PROTOCOL=openvpn_udp"
        - "LAN_NETWORK=172.18.0.0/24"
      devices:
        - "/dev/net/tun"
      ports:
        - "32316:52316"
        - "9443:3000"
        - "6080:6080"
    rutorrent:
      image: romancin/rutorrent-flood:develop
      container_name: rutorrent-flood-develop
      depends_on:
        - nordvpn
      tty: true
      volumes:
        - /share/Container/rutorrent-flood-develop:/config
        - /share/Container/rutorrent-flood-develop/downloads:/downloads
      environment:
        - PUID=0
        - PGID=0
        - TZ=America/Los_Angeles
        - CREATE_SUBDIR_BY_TRACKERS=NO
      network_mode: "service:nordvpn"
      restart: unless-stopped
    soulseek:
      image: realies/soulseek
      environment:
        - resolution=1280x720
      network_mode: "service:nordvpn"
      volumes:
        - appdata:/root/.SoulseekQt
        - logs:/root/Soulseek Chat Logs
        - downloads:/root/Soulseek Downloads
      restart: unless-stopped
volumes:
  appdata:
  logs:
  downloads:

networks:
  default:
    external:
      name: main_network
